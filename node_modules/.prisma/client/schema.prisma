// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource postgre {
  provider = "postgresql"
  url      = env("postgre")
}

model Products {
  id       Int     @id @default(autoincrement())
  name     String
  category String
  amount   Decimal
  price    Decimal
}

model Customer {
  id                Int                 @id @default(autoincrement())
  firstName         String
  lastName          String
  middleName        String
  email             String              @unique
  birthDate         DateTime?
  Order             Order[]
  IntermediateTable IntermediateTable[]
}

model Employee {
  id                Int                 @id @default(autoincrement())
  firstName         String
  lastName          String
  middleName        String
  position          String
  Order             Order[]
  IntermediateTable IntermediateTable[]
}

model Order {
  id           Int      @id @default(autoincrement())
  employeeId   Int
  customerId   Int
  orderAddress String
  deliveryCost Decimal
  orderDate    DateTime @default(now())
  employee     Employee @relation(fields: [employeeId], references: [id])
  customer     Customer @relation(fields: [customerId], references: [id])
}

model IntermediateTable {
  employeesId Int
  customersId Int
  employee    Employee @relation(fields: [employeesId], references: [id])
  customer    Customer @relation(fields: [customersId], references: [id])

  @@id([employeesId, customersId])
}
